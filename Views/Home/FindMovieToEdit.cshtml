@{
    ViewData["Title"] = "Find Movie to Edit";
}

@model MovieCollection.Models.ViewModels.MovieListViewModel

<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
    <br />

    <table id="dtBasicExample" class="table table-striped table-bordered table-sm">
        <thead>
            <tr>
                <!--Table header-->
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var movie in Model.Movies)
            {
            <tr>
                <!--Table row for each movie details-->
                <td>@movie.Category</td>
                <td>@movie.MovieTitle</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>@movie.Edited</td>
                <td>@movie.LentTo</td>
                <td>@movie.Notes</td>
                <td>
                    <form method="post" asp-action="FindMovieToEdit" asp-controller="home">
                        <input type="hidden" name="MovieId" value="@movie.MovieId" />
                        <input type="hidden" name="actionType" value="Edit" />
                        <button type="submit" class="btn btn-sm btn-warning">Edit</button>
                    </form>
                </td>
                <td>
                    <form method="post" asp-action="FindMovieToEdit" asp-controller="home">
                        <input type="hidden" name="MovieId" value="@movie.MovieId" />
                        <input type="hidden" name="actionType" value="Delete" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
             </tr>
            }
        </tbody>
    </table>


    <div page-model="@Model.PagingInfo" page-action="FindMovieToEdit" page-classes-enabled="true" page-class="btn"
         page-class-normal="btn-outline-dark"
         page-class-selected="btn-primary"
         class="btn-group pull-right m-1">
    </div>

</div>
